@{
    ViewData["Title"] = "Agregar Tarea";
}

<div class="container">
    <header class="header">
        <div class="brand">Tu App</div>
        <nav class="nav">
            <a href='@Url.Action("VerTareas","Home")'>Volver</a>
        </nav>
    </header>

    <section class="panel">
        <h2 class="section-title">Agregar Tarea</h2>

        <form class="form" action='@Url.Action("AgregarTarea", "Home")' method="post" enctype="multipart/form-data">
            <div class="form-row">
                <label for="new-titulo">Título</label>
                <input id="new-titulo" class="input" type="text" name="titulo" />
            </div>
            <div class="form-row">
                <label for="new-descripcion">Descripción</label>
                <input id="new-descripcion" class="input" type="text" name="descripcion" />
            </div>
            <div class="form-row">
                <label for="new-fecha">Fecha</label>
                <input id="new-fecha" class="input" type="date" name="fecha" />
            </div>
            <div class="actions">
                <button class="btn primary" type="submit">Crear</button>
                <a class="btn ghost" href='@Url.Action("VerTareas","Home")'>Cancelar</a>
            </div>
        </form>
    </section>
</div>