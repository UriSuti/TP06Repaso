@{
    ViewData["Title"] = "Tarea";
}

<div class="container">
    <header class="header">
        <div class="brand">Tu App</div>
        <nav class="nav">
            <a href='@Url.Action("VerTareas","Home")'>Volver</a>
            <a href='@Url.Action("FinalizarTarea", "Home", new { id = ViewBag.Tarea.getId() })' class="btn ok">Marcar Finalizada</a>
            <a href='@Url.Action("EliminarTarea", "Home", new { id = ViewBag.Tarea.getId() })' class="btn danger">Eliminar</a>
        </nav>
    </header>

    <section class="panel">
        <h2 class="section-title">@ViewBag.Tarea.Titulo</h2>

        <div class="kv">
            <p><strong>Descripción:</strong> @ViewBag.Tarea.Descripcion</p>
            <p><strong>Fecha:</strong> @ViewBag.Tarea.Fecha</p>
            @if (ViewBag.Tarea.Finalizada == true)
            {
                <span class="badge ok">Finalizada: SÍ</span>
            }
            else
            {
                <span class="badge no">Finalizada: NO</span>
            }
        </div>

        <hr class="sep" />

        <h3 class="section-title" style="font-size:18px;">Modificar tarea</h3>
        <form class="form" action='@Url.Action("ModificarTarea", "Home")' method="post" enctype="multipart/form-data">
            <div class="form-row">
                <label for="edit-titulo">Título</label>
                <input id="edit-titulo" class="input" type="text" name="titulo" />
            </div>
            <div class="form-row">
                <label for="edit-descripcion">Descripción</label>
                <input id="edit-descripcion" class="input" type="text" name="descripcion" />
            </div>
            <div class="form-row">
                <label for="edit-fecha">Fecha</label>
                <input id="edit-fecha" class="input" type="date" name="fecha" />
            </div>
            <input type="hidden" name="idTarea" value='@ViewBag.Tarea.getId()' />
            <div class="actions">
                <button class="btn primary" type="submit">Guardar cambios</button>
            </div>
        </form>
    </section>
</div>